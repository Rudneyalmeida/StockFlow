<div class="banner1">
  <div class="container">
    <h1><span class="text-space">My products</h1>
  </div>
    <% if !user_signed_in? %>
      <%= link_to "Create your account", new_user_registration_path, class: "btn-page btn-banner btn-banner-page" %>
    <% end %>  </div>
</div>


<div class="container mt-5 mb-5">
  <div class="cards-wrapper">
    <% @products.each do |product| %>
      <div class="card-listing">
        <div class="card-product">
          <% if product.photo.present? %>
            <%# <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <%= nil %>
          <% end %>
          <%= link_to "Details", product_path(product), class: "btn-cards btn btn-outline-secondary mt-3" %>
        </div>
        <div class="d-flex justify-content-between align-items-center position-relative">
          <div class="card-product-infos">
            <h2><%= product.name %></h2>
          </div>
          <%# <%= cl_image_tag product.user.product.key, class: "avatar-card avatar", alt: "avatar-large" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
