<div class="container p-5 mt-5">
  <h1>DETAILS</h1>

  <h2><%= @product.name %></h2>
  <ul>
    <% if @product.photo.present? %>
      <%= cl_image_tag @product.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
      <%= image_tag 'space_baazar.png', height: 300, width: 400, crop: :fill %>
    <% end %>
    <li><strong>Name:</strong> <%= @product.name %></li>
    <li><strong>Description:</strong> <%= @product.description %></li>
    <li><strong>Expiration:</strong> <%= @product.expiration %></li>
    <li><strong>Location:</strong><%= @product.location %></li>
  </ul>
   <p class="btn-blue"><%= link_to "Back", "javascript:history.back()", class: "btn-blue" %></p>
</div>
