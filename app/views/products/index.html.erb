<div class="bg-landing-page">
  <div class="card-category bg-home" >
    <div  class="int-banner d-flex justify-content-center">
      <%= image_tag 'stock_flow_withe.png', class: "logo-card-category" %>
    </div>
  </div>
  <div class="container mt-5 ">
    <div class="row justify-content-center card-">
        <% @products.each do |product| %>
          <div class="col-12 col-lg-3 border-card">
              <%= link_to product_path(product), class: "card-listing " do %>
                <div class="card-product avatar_father">
                  <% if product.photo.present? %>
                    <%= cl_image_tag product.photo.key %>
                  <% else %>
                    <%= image_tag 'stock_flow.png' %>
                  <% end %>
                </div>
                <div class="d-flex justify-content-between align-items-center position-relative">
                  <div class="card-product-infos">
                    <h2 class="ellipsis"><i class="fa-solid fa-dolly"></i> <%= product.name %></h2>
                    <hr>
                    <span class="qtd"><i class="fa-solid fa-boxes-stacked"></i> Quantity <%= product.quantity %></span>
                  </div>
                </div>
              <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>
