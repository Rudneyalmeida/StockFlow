<h1>Edit Product</h1>

<%= form_for @product, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :expiration %>
    <%= f.date_field :expiration, class: "form-control", min: 1.month.from_now %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :photo %>
    <%= f.file_field :photo, class: "form-control", onchange: "previewFile(this);" %>
    <img id="preview" src="<%= @product.photo.url %>" alt="Preview" style="max-width: 100%; max-height: 300px;">
  </div>
  <%= f.submit "Update Product", class: "btn-blue" %>
<% end %>

<%= link_to "Back", products_path, class: "btn-blue" %>
