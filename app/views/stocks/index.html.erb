<h1>Stocks#index</h1>
<p>Find me in app/views/stocks/index.html.erb</p>


<div class="container mt-5 mb-5 bg-cards-home">
  <div class="cards-wrapper">
    <% @stocks.each do |stock| %>
      <div class="card-listing">
        <div class="card-stock">
          <% if stock.product.photo.present? %>
            <%= cl_image_tag stock.product.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <%= image_tag 'space_baazar.png', height: 300, width: 400, crop: :fill %>
          <% end %>
          <%= link_to "Details", stock_path(stock), class: "btn-cards btn btn-outline-secondary mt-3" %>
        </div>
        <div class="d-flex justify-content-between align-items-center position-relative">
          <div class="card-stock-infos">
            <h2><%= stock.product.name %></h2>
            <span class="price">Quantidade <%= stock.quantity %></span>
          </div>
            <% if stock.user.photo.present? %>
              <%= cl_image_tag stock.user.photo.key, class: "avatar-card avatar", alt: "avatar-large" %>
            <% else %>
              <img class="avatar-card avatar" alt="avatar-large" src="https://kitt.lewagon.com/placeholder/users/arthur-littm" />
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>



